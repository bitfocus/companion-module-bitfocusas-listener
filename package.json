{
	"name": "bitfocusas-listener",
	"version": "1.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "npm run build && companion-module-build",
		"build": "rimraf dist && npm run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "npm run lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-bitfocusas-listener.git"
	},
	"dependencies": {
		"@companion-module/base": "^1.12.1",
		"ws": "^8.18.2"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.1.1",
		"@types/node": "^22.10.2",
		"@types/ws": "^8.18.1",
		"eslint": "^9.17.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.11",
		"prettier": "^3.4.2",
		"rimraf": "^6.0.1",
		"typescript": "~5.5.4",
		"typescript-eslint": "^8.18.1"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"echo 'staging prettier'"
		],
		"*.{ts,tsx,js,jsx}": [
			"echo 'staging lint'"
		]
	}
}
